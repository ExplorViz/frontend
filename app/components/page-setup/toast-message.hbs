<div
  class='position-fixed bottom-0 right-0 p-3'
  style='z-index: 1080; height: 100%; right: 0; bottom: 0;'
>
  <div style='position: absolute; bottom: 10px; right: 10px;'>
    {{#each this.toastMessages as |toast|}}
      <div
        id={{toast.htmlId}}
        class='toast {{toast.cssClasses}}'
        data-delay='4000'
        role='alert'
        aria-live='assertive'
        aria-atomic='true'
        style='width: 250px;'
        {{did-insert this.toastRenderIsComplete}}
      >
        {{#if toast.header}}
          <div class='toast-header'>
            <strong class='mr-auto'>Information</strong>
            <button
              type='button'
              class='ml-2 mb-1 close'
              data-dismiss='toast'
              aria-label='Close'
            >
              <span aria-hidden='true'>&times;</span>
            </button>
          </div>
        {{/if}}
        <div class='toast-body'>
          {{toast.message}}
        </div>
      </div>
    {{/each}}
  </div>
</div>