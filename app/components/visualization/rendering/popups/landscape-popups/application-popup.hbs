<h3 class='popover-header'>
  {{#if this.landscapeRestructure.restructureMode}}
    <div class='text-center text-break font-weight-bold pl-1'>
      {{#if this.isEditing}}
        <Input @value={{@application.name}} @enter={{this.save}} @focus-out={{this.save}} />
      {{else}}
        <div {{on "click" this.edit}}>{{@application.name}}</div>
      {{/if}}
    </div>
  {{else}}
    <div class='text-center text-break font-weight-bold pl-1'>
      {{@application.name}}
    </div> 
  {{/if}}
</h3>
<div class='popover-body'>
  <table class='w-100'>
    <tbody>
      <tr>
        <td>Instance ID:</td>
        <td class='text-right text-break pl-1'>
          {{@application.instanceId}}
        </td>
      </tr>
      <tr>
        <td>Language:</td>
        <td class='text-right text-break pl-1'>
          {{@application.language}}
        </td>
      </tr>
      <tr>
        <td>Contained Classes:</td>
        <td class='text-right text-break pl-1'>
          {{this.clazzCount}}
        </td>
      </tr>
      <tr>
        <td>Contained Packages:</td>
        <td class='text-right text-break pl-1'>
          {{this.packageCount}}
        </td>
      </tr>
    </tbody>
  </table>
</div>