{{#if this.isSelectedApplication}}
  {{#if (eq this.getNumOfCurrentSelectedCommits 1)}}
    <table class='w-100'>
      <thead>
        <tr>
          <th colspan='2'>
            <h4 class='popover-header'>
              <div class='text-center text-break font-weight-bold pl-1'>
                #1 Sel. Commit ({{this.firstSelectedCommitId}})
              </div>
            </h4>
          </th>
          {{!--<th>Metric Name (#1 sel. commit ({{this.firstSelectedCommitId}}))</th>--}}
          <th class='pl-1 pr-1'>{{!Snapshot}}</th>
          {{!<th class="pl-1 pr-1">Aggregated</th>
          <th>Windowed</th>}}
        </tr>
      </thead>
      <tbody>
        {{#each this.firstSelectedCommitMetrics as |metric|}}
          {{#if (eq this.selectedMetricName metric.metricName)}}
            <tr>
              <td
                class='font-weight-bold text-primary'
              >{{metric.metricName}}:</td>
              <td class='text-center font-weight-bold text-primary'>
                {{metric.snapshotVal}}
              </td>
              {{!--<td class="text-center font-weight-bold text-primary">
                {{metric.contAggVal}}
              </td>
              <td class="text-center font-weight-bold text-primary">
                {{metric.winVal}}
              </td>--}}
            </tr>
          {{else}}
            <tr>
              <td>{{metric.metricName}}:</td>
              <td class='text-center'>
                {{metric.snapshotVal}}
              </td>
              {{!--<td class="text-center">
                {{metric.contAggVal}}
              </td>
