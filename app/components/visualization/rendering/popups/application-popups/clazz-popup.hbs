<h3 class='popover-header'>
  {{#if this.landscapeRestructure.restructureMode}}
    <div class='text-center text-break font-weight-bold pl-1'>
      {{#if this.isEditing}}
        <Input @value={{this.name}} @enter={{this.save}} {{on "focusout" this.save}} />
      {{else}}
        <div {{on "click" this.edit}}>{{this.name}}</div>
      {{/if}}
    </div>
  {{else}}
    <div class='text-center text-break font-weight-bold pl-1'>
      {{this.name}}
    </div> 
  {{/if}}
</h3>
<div class='popover-body'>
  <table class='w-100'>
    <thead>
      <tr>
        <th>Metric Name</th>
        <th class='pl-1 pr-1'>{{!Snapshot}}</th>
        {{!<th class="pl-1 pr-1">Aggregated</th>
        <th>Windowed</th>}}
      </tr>
    </thead>
    <tbody>
      {{#each this.allMetrics as |metric|}}
        {{#if (eq this.heatmapConf.selectedMetric.name metric.metricName)}}
          <tr>
            <td
              class='font-weight-bold text-primary'
            >{{metric.metricName}}:</td>
            <td class='text-center font-weight-bold text-primary'>
              {{metric.snapshotVal}}
            </td>
            {{!--<td class="text-center font-weight-bold text-primary">
              {{metric.contAggVal}}
            </td>
            <td class="text-center font-weight-bold text-primary">
              {{metric.winVal}}
            </td>--}}
          </tr>
        {{else}}
          <tr>
            <td>{{metric.metricName}}:</td>
            <td class='text-center'>
              {{metric.snapshotVal}}
            </td>
            {{!--<td class="text-center">
              {{metric.contAggVal}}
            </td>
            <td class="text-center">
              {{metric.winVal}}
            </td>--}}
          </tr>
        {{/if}}
      {{/each}}
    </tbody>
  </table>
</div>