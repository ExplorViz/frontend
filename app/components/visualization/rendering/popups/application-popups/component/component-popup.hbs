{{#let @popupData.entity as |component|}}
  <h3 class='popover-header'>
    <div class='text-center text-break font-weight-bold pl-1'>
      {{component.name}}
    </div>
  </h3>
  <Visualization::Rendering::Popups::PopupTabs
    @restructureMode={{@restructureMode}}
    @originOfData={{component.originOfData}}
  >
    <:runtimeTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Component::ComponentPopupRuntime
        @component={{component}}
      />
    </:runtimeTab>
    <:codeTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Component::ComponentPopupCode
        @component={{component}}
      />
    </:codeTab>
    <:restructureTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Component::ComponentPopupRestructure
        @component={{component}}
      />
    </:restructureTab>
  </Visualization::Rendering::Popups::PopupTabs>
{{/let}}