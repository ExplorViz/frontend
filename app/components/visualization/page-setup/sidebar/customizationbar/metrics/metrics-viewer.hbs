<BsButton
  @type='primary'
  class='align-self-end'
  {{on 'click' this.loadMetrics}}
>
  {{svg-jar 'sync-16' class='octicon'}}
</BsButton>
<table>
  <thead>
    <tr>
      <th>Metric Name</th>
      <th>Timestamp</th>
      <th>Value</th>
      <th>Unit</th>
    </tr>
  </thead>
  <tbody>
    {{#each this.metrics as |metric|}}
      <tr>
        <td>
          <HelpTooltip @title='{{metric.description}}' />{{metric.name}}
        </td>
        <td>{{format-date metric.timestamp}}</td>
        <td>{{metric.value}}</td>
        <td>{{metric.unit}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>