<div class="dropdown">
  <a class="btn btn-outline-dark dropdown-toggle autoMargin" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    Color Presets
  </a>

  <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
    {{#each @colorSchemes as |colorScheme|}}
      <li>
      <a class="dropdown-item pointer-cursor"
      {{on "click" (fn @applyColorScheme colorScheme.id)}}>
        {{colorScheme.name}}
      </a>
      </li>
    {{/each}}
  </ul>
</div>