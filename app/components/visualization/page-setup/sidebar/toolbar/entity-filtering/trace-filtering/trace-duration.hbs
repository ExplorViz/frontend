<div class='mb-3'>
  <HelpTooltip @title='bla' />
  <label class='m-0' for='filtering-trace-duration'>Min. duration (# traces:
    <b>{{@remainingTraceCount}} / {{@initialTraceCount}}</b>)</label>
  <div class='range-slider--container'>
    <div style='width: 100%;'>
      <input
        id='filtering-trace-duration'
        value={{this.durations.selected}}
        min={{this.durations.min}}
        max={{this.durations.max}}
        type='range'
        step='1'
        class='form-control mr-2'
        {{on 'change' this.onChange}}
        oninput={{fn this.onInput this}}
      />
      <div class='range-slider--values'>
        <span>{{this.durations.min}}</span>
        <span style='font-weight: bold;'>{{this.durations.selected}}</span>
        <span>{{this.durations.max}}</span>
      </div>
    </div>
  </div>
</div>