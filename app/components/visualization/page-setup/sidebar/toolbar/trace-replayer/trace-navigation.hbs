<div class='mt-3 d-flex justify-content-between align-items-center'>
  <BsButton
    title='One step back'
    @onClick={{@selectPreviousTraceStep}}
    @type='secondary'
    @outline={{true}}
    @disabled={{lte @currentTraceStepIndex 0}}
  >
    {{svg-jar 'chevron-left-16' class='octicon align-middle'}}
  </BsButton>
  <div>
    Step
    <strong>{{inc @currentTraceStepIndex}}</strong>
    of
    {{@traceLength}}
  </div>
  <BsButton
    title='One step forward'
    @onClick={{@selectNextTraceStep}}
    @type='secondary'
    @outline={{true}}
    @disabled={{gte @currentTraceStepIndex (dec @traceLength)}}
  >
    {{svg-jar 'chevron-right-16' class='octicon align-middle'}}
  </BsButton>
</div>