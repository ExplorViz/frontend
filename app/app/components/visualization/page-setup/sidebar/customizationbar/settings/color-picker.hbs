<div
  id={{concat 'cp-application-' @id}}
  class='setting-container input-group justify-content-between'
>
  <span class='colorpicker-label'>{{format-color-property
      @setting.displayName
    }}</span>
  <span class='input-group-append colorpicker-input'>
    <span
      class='input-group-text colorpicker-input-addon'
      id={{concat 'cp-application-span' @id}}
      {{did-insert (fn this.setupApplicationColorpicker @id)}}
    >
      <i></i></span>
  </span>
</div>