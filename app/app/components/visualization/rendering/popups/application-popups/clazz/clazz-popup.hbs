{{#let
  (hash clazz=@popupData.entity applicationId=@popupData.applicationId)
  as |vars|
}}
  <h3 class='popover-header'>
    <div class='text-center text-break font-weight-bold pl-1'>
      {{vars.clazz.name}}
    </div>
  </h3>
  <Visualization::Rendering::Popups::PopupTabs
    @restructureMode={{@restructureMode}}
    @originOfData={{vars.clazz.originOfData}}
  >
    <:runtimeTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Clazz::ClazzPopupRuntime
        @clazz={{vars.clazz}}
        @applicationId={{vars.applicationId}}
      />
    </:runtimeTab>
    <:codeTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Clazz::ClazzPopupCode
        @popupData={{@popupData}}
      />
    </:codeTab>
    <:restructureTab>
      <Visualization::Rendering::Popups::ApplicationPopups::Clazz::ClazzPopupRestructure
        @clazz={{vars.clazz}}
        @applicationId={{vars.applicationId}}
      />
    </:restructureTab>
  </Visualization::Rendering::Popups::PopupTabs>
{{/let}}