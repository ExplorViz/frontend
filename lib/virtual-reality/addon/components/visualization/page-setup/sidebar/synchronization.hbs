<div class='sidebar-component-close' {{on 'click' this.close}}>
  {{svg-jar 'x-16' class='octicon'}}
</div>

<div>
  <label class='bold'>Status: </label>

  <label>{{this.collaborationSession.connectionStatus}}</label>
</div>

{{#if (eq this.collaborationSession.connectionStatus 'online')}}
  <div>
    <label class='bold'>Current Configuration Environment: </label>
    <label>ARENA2</label>
  </div>

  <label class='bold'>Connected Devices</label>

  <ul>
    {{#each this.users as |user|}}
      <li style={{html-safe user.style}}>
        {{user.name}}
        {{svg-jar 'device-camera-video-16' class='octicon align-middle'}}
      </li>
    {{/each}}
  </ul>

{{/if}}

{{#if (eq this.collaborationSession.connectionStatus 'offline')}}
  <div class='flex-space-between'>
    <label class='bold'>Rooms</label>

    <BsButton
      title='Synchronize Devices'
      {{on 'click' this.loadRooms}}
      @type='secondary'
      @outline={{true}}
    >
      {{svg-jar 'sync-16' class='octicon'}}
    </BsButton>
  </div>

  <ul>
    {{#each this.rooms as |room|}}
      <div class='flex-space-between room-list-item'>
        <li>
          {{room.roomName}}
        </li>
        <BsButton
          title='Join Room'
          {{on 'click' (fn this.joinRoom room)}}
          @type='success'
          @outline={{true}}
        >
          Join
        </BsButton>
      </div>
    {{/each}}
  </ul>

  {{#if this.timestampService.timestamp}}
    <BsButton
      title='Host Room'
      {{on 'click' this.hostRoom}}
      @type='secondary'
      @outline={{true}}
    >
      Host Room
    </BsButton>
  {{else}}
    <label class='bold'>No landscape data available. Cannot host room. </label>
  {{/if}}
{{/if}}

{{#if (eq this.collaborationSession.connectionStatus 'online')}}
  <BsButton
    title='Disconnect from Room'
    {{on 'click' this.leaveSession}}
    @type='danger'
    @outline={{true}}
  >
    Disconnect
  </BsButton>
{{/if}}