<div class='d-flex flex-row justify-content-center overflow-scroll'>
  <table id='room-selection-table' class='table table-striped'>
    <thead>
      <tr>
        <th scope='col'>Name</th>
        <th scope='col'>Users</th>
        <th scope='col'>Landscape</th>
        <th scope='col'>Token</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.rooms as |room|}}
        <tr
          {{on 'click' (fn this.joinRoom room)}}
          title='Join Room'
          class='room-entry'
        >
          <td>{{room.roomName}}</td>
          <td>{{room.size}}</td>
          <td>
            {{if room.alias room.alias room.landscapeToken}}
          </td>
          <td class='room-token'>
            {{room.landscapeToken}}
            <BsTooltip @placement='bottom' @triggerEvents='hover'>
              {{room.landscapeToken}}
            </BsTooltip>
          </td>
        </tr>
      {{else}}
        There are no open rooms at the moment.
      {{/each}}
      <tr>
        <td colspan='4' class='p-1'>
          <div class='d-flex flex-row justify-content-center'>
            <BsButton
              @type='primary'
              class='align-self-center pt-2 px-3'
              @onClick={{this.loadRooms}}
            >
              {{svg-jar 'sync-16' class='octicon'}}
            </BsButton>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
</div>
